{
    "repository": {
        "repo": "release-toolkit-example-repo",
        "owner": "omriLugasi"
    },
    "workspaces": [
        {
            "branch": "master",
            "folderPath": "src/project-a",
            "id": "project-a",
            "plugins": [
                {
                    "name": "github",
                    "tagPattern": "project A v{{tag}}",
                    "releasePattern": "project A v{{release}}"
                },
                {
                    "name": "npm",
                    "dryRun": true
                }
            ]
        },
        {
            "branch": "master",
            "folderPath": "src/project-b",
            "id": "project-b",
            "plugins": [
                {
                    "name": "github",
                    "tagPattern": "project B v{{tag}}",
                    "releasePattern": "project B v{{release}}"
                },
                {
                    "name": "npm",
                    "dryRun": true
                }
            ]
        }
    ],
    "commitPatterns": [
        {
            "pattern": "^refactor\\(\\):",
            "upgrade": "major",
            "title": "Refeactor!"
        },
        {
            "pattern": "^feat\\(\\):",
            "upgrade": "minor",
            "title": "Features"
        },
        {
            "pattern": "^chore\\(\\):",
            "upgrade": "build",
            "title": "Chores"
        },
        {
            "pattern": "^docs\\(\\):",
            "upgrade": "ignore",
            "title": "Docs"
        },
        {
            "pattern": "^ignore\\(\\):",
            "upgrade": "ignore"
        }
    ]
}